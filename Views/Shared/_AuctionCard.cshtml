@model Auction
@{
    var timeRemaining = Model.TimeEnd - DateTime.Now;
    var isActive = Model.Status == AuctionStatus.Approved && Model.TimeStart <= DateTime.Now && Model.TimeEnd >= DateTime.Now;
    var isEnded = Model.Status == AuctionStatus.Closed || (Model.Status == AuctionStatus.Approved && Model.TimeEnd < DateTime.Now);
    var highestBid = Model.Bids.Any() ? Model.Bids.Max(b => b.Price) : Model.PriceStart;
    var totalBids = Model.Bids.Count;
}

<div class="auction-card card h-100 shadow-sm" data-auction-id="@Model.Id">
    <div class="card-img-container position-relative">
        <img src="@Model.ImgUrl" class="card-img-top" alt="@Model.Name"
             style="height: 200px; object-fit: cover;">
        <div class="card-img-overlay d-flex justify-content-between align-items-start p-3">
            <!-- Status Badge -->
            @if (Model.Status == AuctionStatus.Approved)
            {
                if (isActive)
                {
                    <span class="badge bg-success">
                        <i class="fas fa-play-circle me-1"></i>Đang diễn ra
                    </span>
                }
                else if (isEnded)
                {
                    <span class="badge bg-secondary">
                        <i class="fas fa-flag-checkered me-1"></i>Đã kết thúc
                    </span>
                }
                else
                {
                    <span class="badge bg-info">
                        <i class="fas fa-clock me-1"></i>Sắp diễn ra
                    </span>
                }
            }
            else if (Model.Status == AuctionStatus.Pending)
            {
                <span class="badge bg-warning">
                    <i class="fas fa-clock me-1"></i>Chờ duyệt
                </span>
            }
            else if (Model.Status == AuctionStatus.Rejected)
            {
                <span class="badge bg-danger">
                    <i class="fas fa-times-circle me-1"></i>Bị từ chối
                </span>
            }
            else if (Model.Status == AuctionStatus.Closed)
            {
                <span class="badge bg-secondary">
                    <i class="fas fa-ban me-1"></i>Đã đóng
                </span>
            }

            <!-- Bids Count -->
            <span class="badge bg-primary">
                <i class="fas fa-hammer me-1"></i>@totalBids
            </span>
        </div>
    </div>

    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate" title="@Model.Name">@Model.Name</h5>
        <p class="card-text text-muted flex-grow-1">
            @if (Model.Description.Length > 100)
            {
                @Model.Description.Substring(0, 100)

                <text>...</text>
            }
            else
            {
                @Model.Description
            }
        </p>

        <!-- Auction Info -->
        <div class="auction-info mb-3">
            <div class="row text-center small">
                <div class="col-6">
                    <div class="text-muted">Giá khởi điểm</div>
                    <div class="fw-bold text-primary">@Model.PriceStart.ToString("N0") ₫</div>
                </div>
                <div class="col-6">
                    <div class="text-muted">Giá cao nhất</div>
                    <div class="fw-bold text-success">@highestBid.ToString("N0") ₫</div>
                </div>
            </div>
        </div>

        <!-- Time Information -->
        <div class="auction-time mb-3">
            @if (isActive)
            {
                <div class="time-remaining">
                    <div class="d-flex justify-content-between small text-muted mb-1">
                        <span>Kết thúc sau:</span>
                        <span class="fw-bold text-danger">
                            @if (timeRemaining.TotalDays >= 1)
                            {
                                @Math.Floor(timeRemaining.TotalDays)

                                <text> ngày</text>
                            }
                            else if (timeRemaining.TotalHours >= 1)
                            {
                                @Math.Floor(timeRemaining.TotalHours)

                                <text> giờ</text>
                            }
                            else
                            {
                                @Math.Floor(timeRemaining.TotalMinutes)

                                <text> phút</text>
                            }
                        </span>
                    </div>
                    <div class="progress" style="height: 6px;">
                        @{
                            var totalDuration = (Model.TimeEnd - Model.TimeStart).TotalSeconds;
                            var elapsedDuration = (DateTime.Now - Model.TimeStart).TotalSeconds;
                            var progressPercentage = Math.Min(100, Math.Max(0, (elapsedDuration / totalDuration) * 100));
                        }
                        <div class="progress-bar bg-warning" role="progressbar"
                             style="width: @progressPercentage%;"
                             aria-valuenow="@progressPercentage"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="time-info">
                    <div class="row small text-muted text-center">
                        <div class="col-6">
                            <div>Bắt đầu</div>
                            <div class="fw-bold">@Model.TimeStart.ToString("dd/MM")</div>
                        </div>
                        <div class="col-6">
                            <div>Kết thúc</div>
                            <div class="fw-bold">@Model.TimeEnd.ToString("dd/MM")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card-footer bg-transparent">
        <div class="row g-2">
            @if (isActive)
            {
                <div class="col-6">
                    <a asp-controller="Auction" asp-action="Details" asp-route-id="@Model.Id"
                       class="btn btn-success w-100 btn-sm">
                        <i class="fas fa-eye me-1"></i>Theo dõi
                    </a>
                </div>
                <div class="col-6">
                    <button class="btn btn-outline-warning w-100 btn-sm edit-auction-btn"
                            data-auction-id="@Model.Id"
                            data-bs-toggle="tooltip" title="Chỉnh sửa">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
            }
            else if (Model.Status == AuctionStatus.Pending)
            {
                <div class="col-6">
                    <a asp-controller="Auction" asp-action="Details" asp-route-id="@Model.Id"
                       class="btn btn-outline-primary w-100 btn-sm">
                        <i class="fas fa-eye me-1"></i>Xem
                    </a>
                </div>
                <div class="col-6">
                    <button class="btn btn-outline-warning w-100 btn-sm edit-auction-btn"
                            data-auction-id="@Model.Id">
                        <i class="fas fa-edit me-1"></i>Sửa
                    </button>
                </div>
            }
            else
            {
                <div class="col-12">
                    <a asp-controller="Auction" asp-action="Details" asp-route-id="@Model.Id"
                       class="btn btn-outline-primary w-100 btn-sm">
                        <i class="fas fa-eye me-1"></i>Xem Chi Tiết
                    </a>
                </div>
            }
        </div>

        <!-- Additional Actions -->
        <div class="row g-2 mt-2">
            @if (Model.Status == AuctionStatus.Pending || Model.Status == AuctionStatus.Rejected)
            {
                <div class="col-6">
                    <button class="btn btn-outline-danger w-100 btn-sm delete-auction-btn"
                            data-auction-id="@Model.Id"
                            data-auction-name="@Model.Name">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                </div>
                <div class="col-6">
                    <button class="btn btn-outline-info w-100 btn-sm duplicate-auction-btn"
                            data-auction-id="@Model.Id">
                        <i class="fas fa-copy me-1"></i>Nhân bản
                    </button>
                </div>
            }
            else if (isEnded)
            {
                <div class="col-12">
                    <a href="#" class="btn btn-outline-success w-100 btn-sm">
                        <i class="fas fa-chart-bar me-1"></i>Xem Thống Kê
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .auction-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

        .auction-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .card-img-container {
        overflow: hidden;
    }

    .auction-card .card-img-top {
        transition: transform 0.5s ease;
    }

    .auction-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-img-overlay .badge {
        backdrop-filter: blur(10px);
        background-color: rgba(255,255,255,0.95) !important;
        color: #000 !important;
        font-weight: 600;
    }

    .card-title {
        font-weight: 600;
        color: #2c3e50;
    }

    .auction-info {
        border-top: 1px solid #f8f9fa;
        border-bottom: 1px solid #f8f9fa;
        padding: 0.75rem 0;
    }

    .btn-sm {
        border-radius: 8px;
        font-weight: 500;
    }

    .progress {
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 10px;
        transition: width 0.5s ease;
    }

    @@media (max-width: 768px) {
        .auction-card {
            margin-bottom: 1rem;
        }

        .btn-sm {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
        }
    }
</style>
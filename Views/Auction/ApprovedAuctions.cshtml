@model IEnumerable<MyApp.Models.Auction>

<h2 class="text-center">Danh sách phiên đấu giá đã duyệt</h2>

<table class="table">
    <thead>
        <tr class="text-center">
            <th>Tên</th>
            <th>Hình ảnh</th>
            <th>Mô tả</th>
            <th>Thời gian bắt đầu</th>
            <th>Thời gian kết thúc</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auction in Model)
        {
            <tr>
                <td>@auction.Name</td>
                <td><img src="@auction.ImgUrl" alt="Ảnh sản phẩm @auction.Name" class="img-fluid" style="max-height: 100px;" /></td>
                <td>@auction.Description</td>
                <td>@auction.TimeStart.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@auction.TimeEnd.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
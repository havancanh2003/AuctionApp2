@model MyApp.Dtos.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h2 class="auth-title" style="color:var(--success)">Tạo tài khoản mới</h2>

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="Name"></label>
    <input asp-for="Name" placeholder="Nhập họ tên..." />
    <span asp-validation-for="Name" class="text-danger"></span>

    <label asp-for="Email"></label>
    <input asp-for="Email" placeholder="Nhập email..." />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Nhập mật khẩu..." />
    <span asp-validation-for="Password" class="text-danger"></span>

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu..." />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    <label asp-for="RoleType"></label>
    <select asp-for="RoleType" asp-items="Html.GetEnumSelectList<RoleTypeEnum>()">
        <option value="">-- Chọn vai trò --</option>
    </select>
    <span asp-validation-for="RoleType" class="text-danger"></span>

    <button type="submit" class="success">Đăng ký</button>
</form>

<div class="auth-footer">
    <p>Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

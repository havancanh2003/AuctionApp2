@model MyApp.Dtos.LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="auth-content">
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="validation-summary-errors">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    }

    <form asp-action="Login" method="post" id="loginForm">
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

        <div class="form-group">
            <label asp-for="Email" class="form-label">
                <i class="fas fa-envelope me-2"></i>Email
            </label>
            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label">
                <i class="fas fa-lock me-2"></i>Mật khẩu
            </label>
            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu..." />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
        </div>

        <button type="submit" class="btn-auth btn-primary" id="loginButton">
            <i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập
        </button>
    </form>

    <div class="text-center mt-4">
        <a asp-action="ForgotPassword" class="auth-link">
            <i class="fas fa-key me-1"></i>Quên mật khẩu?
        </a>
    </div>

    <div class="auth-separator">
        <span>Hoặc</span>
    </div>

    <div class="text-center">
        <p class="text-muted">Chưa có tài khoản?</p>
        <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn-auth btn-outline">
            <i class="fas fa-user-plus me-2"></i>Đăng Ký Tài Khoản Mới
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            $('#loginForm').on('submit', function() {
                var btn = $('#loginButton');
                btn.prop('disabled', true).addClass('btn-loading');
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Đang đăng nhập...');
            });

            // Clear validation on input
            $('.form-control').on('input', function() {
                $(this).removeClass('is-invalid');
                $(this).closest('.form-group').find('.text-danger').hide();
            });
        });
    </script>
}
@model MyApp.Dtos.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h2 class="auth-title">Đăng nhập</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="Email"></label>
    <input asp-for="Email" placeholder="Nhập email..." />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" placeholder="Nhập mật khẩu..." />
    <span asp-validation-for="Password" class="text-danger"></span>

    <div style="display:flex;align-items:center;gap:6px;margin:6px 0 12px;">
        <input asp-for="RememberMe" type="checkbox" style="width:16px;height:16px;" />
        <label asp-for="RememberMe" style="margin:0;font-weight:400;"></label>
    </div>

    <button type="submit">Đăng nhập</button>
</form>

<div class="auth-footer">
    <p>Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
